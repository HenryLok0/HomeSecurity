#include <SoftwareSerial.h>
#include <ctype.h>   // for tolower()
#include <DHT.h>     // 需要安装 Adafruit 的 DHT 库

// ----------------------
// Bluetooth wiring (UNO1)
// BT TXD -> D2 (UNO RX)
// BT RXD -> D3 (UNO TX, via resistor divider)
// ----------------------
const int BT_RX_PIN = 2;  // Arduino 接收蓝牙数据 (连 BT TXD)
const int BT_TX_PIN = 3;  // Arduino 发送数据给蓝牙 (连 BT RXD)

SoftwareSerial BT(BT_RX_PIN, BT_TX_PIN);  // RX, TX

// ----------------------
// Alarm devices on UNO1
// ----------------------
// HW-512 有源蜂鸣器:
//   + -> D6
//   - -> GND
const int buzzerPin = 6;

// HW-477 双色 LED (共阴极):
//   - -> GND
//   R -> 电阻 -> D9
//   G -> 电阻 -> D10
const int redPin   = 9;
const int greenPin = 10;

// ----------------------
// DHT11 (HW-507) 温湿度传感器
//   VCC -> 5V
//   GND -> GND
//   OUT -> D7
// ----------------------
#define DHTPIN   7
#define DHTTYPE  DHT11

DHT dht(DHTPIN, DHTTYPE);

// DHT11 读数缓存，避免频繁访问（DHT11 最少 1 秒一次）
unsigned long lastDhtReadTime = 0;
const unsigned long DHT_INTERVAL = 2000; // 2 秒
float lastTemp = NAN;
float lastHum  = NAN;

// 报警状态
bool alarmOn = false;

// 用 millis() 做闪烁
unsigned long lastToggleTime = 0;
const unsigned long alarmInterval = 300; // 闪烁间隔 (ms)
bool alarmOutputState = false;           // 当前输出是 HIGH 还是 LOW

// ----------------------
// 安全读取 DHT11（必要时才重新采样）
// ----------------------
bool readDHTIfNeeded() {
  unsigned long now = millis();

  // 如果上次读在 2 秒以内，直接用缓存
  if ((now - lastDhtReadTime < DHT_INTERVAL) &&
      !isnan(lastTemp) && !isnan(lastHum)) {
    return true;
  }

  float h = dht.readHumidity();
  float t = dht.readTemperature(); // 摄氏温度

  if (isnan(h) || isnan(t)) {
    // 读取失败
    return false;
  }

  lastHum = h;
  lastTemp = t;
  lastDhtReadTime = now;
  return true;
}

// ----------------------
// 处理蓝牙收到的一条指令
// ----------------------
void handleBtCommand(char c) {
  c = tolower(c);  // 支持大小写

  if (c == 'a') {
    // 开启警报
    alarmOn = true;
    BT.println(F("ALARM ON"));
    Serial.println(F("ALARM ON"));

  } else if (c == 'x') {
    // 关闭警报
    alarmOn = false;
    BT.println(F("ALARM OFF"));
    Serial.println(F("ALARM OFF"));

    // 立刻关闭蜂鸣器和灯
    alarmOutputState = false;
    digitalWrite(buzzerPin, LOW);
    digitalWrite(redPin, LOW);
    digitalWrite(greenPin, LOW);

  } else if (c == 't') {
    // 读取 DHT11 温湿度并回传
    if (!readDHTIfNeeded()) {
      Serial.println(F("DHT11 read failed"));
      BT.println(F("ERROR: Failed to read from DHT11 sensor."));
      return;
    }

    // 打印到串口监视器
    Serial.print(F("DHT11 -> T="));
    Serial.print(lastTemp);
    Serial.print(F(" *C, H="));
    Serial.print(lastHum);
    Serial.println(F(" %"));

    // 通过蓝牙回传
    BT.print(F("TEMP="));
    BT.print(lastTemp, 1);
    BT.print(F(" C, HUM="));
    BT.print(lastHum, 1);
    BT.println(F(" %"));

  } else if (c == '?') {
    // 帮助菜单
    BT.println(F("Commands:"));
    BT.println(F("  a - alarm ON (buzzer + HW-477 R/G blink)"));
    BT.println(F("  x - alarm OFF"));
    BT.println(F("  t - read DHT11 temperature & humidity"));
    BT.println(F("  ? - show this help"));

  } else {
    // 未知命令
    BT.print(F("Unknown cmd: "));
    BT.println(c);
    BT.println(F("Use 'a', 'x', 't' or '?'"));
  }
}

void setup() {
  // PC 调试串口
  Serial.begin(9600);

  // 蓝牙串口
  BT.begin(9600);   // HC-05/06 默认 9600

  // IO 模式
  pinMode(buzzerPin, OUTPUT);
  pinMode(redPin, OUTPUT);
  pinMode(greenPin, OUTPUT);

  // DHT11 初始化
  dht.begin();

  // 初始全部关闭
  digitalWrite(buzzerPin, LOW);
  digitalWrite(redPin, LOW);
  digitalWrite(greenPin, LOW);

  alarmOn = false;
  alarmOutputState = false;
  lastToggleTime = millis();
  lastDhtReadTime = 0;

  Serial.println(F("UNO1: Bluetooth alarm + DHT11 ready."));
  BT.println(F("UNO1: HomeSecurity alarm + DHT11 ready."));
  BT.println(F("Send 'a' (alarm on), 'x' (alarm off), 't' (temperature&humidity), '?' (help)."));
}

void loop() {
  // 1) 蓝牙接收指令
  if (BT.available()) {
    char c = BT.read();
    if (c != '\r' && c != '\n') {  // 忽略回车/换行
      handleBtCommand(c);
    }
  }

  // 可选：电脑串口监视器也能发同样指令测试
  if (Serial.available()) {
    char c = Serial.read();
    if (c != '\r' && c != '\n') {
      handleBtCommand(c);
    }
  }

  // 2) 根据 alarmOn 状态控制蜂鸣器 + 灯
  unsigned long now = millis();

  if (alarmOn) {
    // 报警模式：蜂鸣器 + 红灯 + 绿灯 一起闪烁
    if (now - lastToggleTime >= alarmInterval) {
      lastToggleTime = now;
      alarmOutputState = !alarmOutputState;

      digitalWrite(buzzerPin, alarmOutputState ? HIGH : LOW);
      digitalWrite(redPin,    alarmOutputState ? HIGH : LOW);
      digitalWrite(greenPin,  alarmOutputState ? HIGH : LOW);
    }
  } else {
    // 非报警模式：保持关闭（双保险）
    digitalWrite(buzzerPin, LOW);
    digitalWrite(redPin, LOW);
    digitalWrite(greenPin, LOW);
  }
}