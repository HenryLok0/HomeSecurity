<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Alarm Sensitivity -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_sensitivity"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <SeekBar
            android:id="@+id/seekSensitivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:layout_marginBottom="24dp"/>

        <!-- Camera Mode -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_camera_mode"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgCameraMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/rbContinuous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mode_continuous" />

            <RadioButton
                android:id="@+id/rbScheduled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mode_scheduled" />

            <RadioButton
                android:id="@+id/rbSleep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mode_sleep" />
        </RadioGroup>

        <!-- Notifications -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_notifications"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/opt_notifications_enable"
            android:layout_marginBottom="24dp"/>

        <!-- Wi-Fi Configuration -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_wifi"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etWifiSSID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_ssid"
            android:inputType="text"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etWifiPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:layout_marginBottom="24dp"/>

        <!-- Bluetooth Configuration -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_bluetooth"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnConnectBluetooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_connect_bluetooth"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvConnectedDevice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_connected_device"
            android:layout_marginBottom="24dp"/>

        <!-- Data Storage -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_storage"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <CheckBox
            android:id="@+id/cbStorage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/opt_save_local"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/btnSaveSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_save_settings"/>

    </LinearLayout>
</ScrollView>