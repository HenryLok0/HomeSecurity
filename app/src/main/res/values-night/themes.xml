<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Ensure night resources use the same light-theme colors so app appearance doesn't change in dark mode -->
    <style name="Base.Theme.HomeSecurity" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary Brand Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Text Appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <style name="Theme.HomeSecurity" parent="Base.Theme.HomeSecurity" />
</resources>